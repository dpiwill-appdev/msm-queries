<h1>
  Director <%= @director.id %> details
</h1>
<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob.strftime('%Y-%m-%d') %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <% @director.movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.id %>
      </td>

      <td>
        
      </td>

      <td>
        <%= movie.title %>
      </td>

      <td>
        <%= movie.year %>
      </td>

      <td>
        <%= movie.director.name %>
      </td>

      <td>
        <a href="/movies/<%= movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
